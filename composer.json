{
  "name": "bfitech/zapstore",
  "description": "A simple database connection wrapper.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Rendra Suroso",
      "email": "rs@cogsci.bandungfe.net"
    }
  ],
  "require": {
    "php": ">=7.0 <7.3",
    "bfitech/zapcore": "~2.0.0"
  },
  "require-dev": {
    "ext-sqlite3": "*",
    "ext-pdo_sqlite": "*",
    "ext-mysqlnd": "*",
    "ext-pdo_mysql": "*",
    "ext-pgsql": "*",
    "ext-pdo_pgsql": "*",
    "ext-redis" : "*",
    "predis/predis": "~1.1.1",
    "phpunit/phpunit": "6.*"
  },
  "suggest": {
    "bfitech/zapstore-sqlite3": "SQLite3-specific support.",
    "bfitech/zapstore-mysql": "MySQL-specific support.",
    "bfitech/zapstore-pgsql": "PostgreSQL-specific support.",
    "bfitech/zapstore-redis": "Redis-specific support.",
    "bfitech/zapstore-predis": "Predis-specific support."
  },
  "autoload": {
    "psr-4": {
      "BFITech\\ZapStore\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BFITech\\ZapCoreDev\\": "vendor/bfitech/zapcore/dev"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0.x-dev"
    }
  }
}
